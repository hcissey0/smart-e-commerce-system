<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controllers.DashboardController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Smart E-Commerce System">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search by Name..." HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
                  <Button mnemonicParsing="false" onAction="#handleSortAsc" text="Sort Price Asc" />
                  <Button mnemonicParsing="false" onAction="#handleSortDesc" text="Sort Price Desc" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="productTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colPrice" prefWidth="100.0" text="Price" />
            <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
            <TableColumn fx:id="colCategory" prefWidth="100.0" text="Category ID" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Shopping Cart">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCartName" prefWidth="120.0" text="Item" />
                <TableColumn fx:id="colCartQty" prefWidth="50.0" text="Qty" />
                  <TableColumn fx:id="colCartPrice" prefWidth="60.0" text="Price" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Total: ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="totalLabel" text="\$0.00">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCheckout" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Checkout">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" onAction="#handleAddToCart" text="Add Selected to Cart" />
            <Button mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" />
            <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete Selected" />
            <Button mnemonicParsing="false" onAction="#handleAdd" text="Add Product" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
